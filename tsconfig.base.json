{
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["src"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata":true,
    "isolatedModules": true,
    "preserveConstEnums": true,
    "lib": [ "es2015","es2017" ,"esnext"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "dist/types"
  },
}
